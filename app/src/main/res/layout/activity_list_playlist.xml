<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ListPlaylistActivity"
    android:background="#222222">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_lst_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="#ffffff">
    </android.support.v7.widget.Toolbar>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lst_playlist"
        android:layout_below="@+id/toolbar_lst_playlist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="#cecece"
        android:dividerHeight="1px" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/title_toolbar_playlist"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:text="Playlist"
        android:layout_above="@+id/lst_playlist"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

</RelativeLayout>
